{
  "compilerOptions": {
    "lib": [
      "es2019"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": true,
    "target": "ES2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true
  },
  "exclude": [
    "**/dist/**",
    "**/tests/**",
    "**/node_modules/**",
    "**/jest.config.ts"
  ]
}
